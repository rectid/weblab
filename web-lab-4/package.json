{
  "name": "social-user-app",
  "version": "1.0.0",
  "description": "Клиентское приложение социальной сети для пользователей с Angular и Node.js.",
  "scripts": {
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "client:start": "ng serve --host 0.0.0.0 --port 4300",
    "client:build": "ng build",
    "client:test": "ng test",
    "lint": "ng lint",
    "build": "npm run client:build",
    "start": "concurrently \"npm run server\" \"npm run client:start\"",
    "test": "jest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1",
    "zone.js": "^0.14.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.1",
    "@angular/cli": "^18.2.1",
    "@angular/compiler-cli": "^18.2.0",
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.15.0",
    "@types/supertest": "^2.0.16",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  }
}
